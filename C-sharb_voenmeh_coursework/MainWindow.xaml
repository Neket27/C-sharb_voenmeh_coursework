<Window x:Class="C_sharb_voenmeh_coursework.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors" xmlns:b1="clr-namespace:C_sharb_voenmeh_coursework.Controls"
        mc:Ignorable="d"
        Title="Проводник" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">  <!-- Открытие окна поцентру -->

    <Grid>

        <TabControl ItemsSource="{Binding DirectoryTabItemViewModels}"
                    SelectedItem="{Binding CurrentDirectoryTabItem}">

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <!-- элементы в строку горизонтально -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Title}"/>
                        <Button Command="{Binding CloseCommand}">X</Button>
                    </StackPanel>
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <b1:DirectoryTabItem>
                    </b1:DirectoryTabItem>
                </DataTemplate>
            </TabControl.ContentTemplate>
            </TabControl>

    </Grid>
</Window>