<Application x:Class="C_sharb_voenmeh_coursework.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:C_sharb_voenmeh_coursework"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>

            <Image x:Key="folder" Source="Resource/Icons/folder.ico"></Image>
            <Image x:Key="text-editor" Source="Resource/Icons/text-editor.ico"></Image>
            <Image x:Key="folder-desktop" Source="Resource/Icons/LeftPanel/folder-desktop.ico"></Image>
            <Image x:Key="documents" Source="Resource/Icons/LeftPanel/multimedia.ico"></Image>
            <Image x:Key="multimedia" Source="Resource/Icons/LeftPanel/documents.ico"></Image>
            <Image x:Key="image-viewer" Source="Resource/Icons/LeftPanel/image-viewer.ico"></Image>
            <Image x:Key="audio-player" Source="Resource/Icons/LeftPanel/audio-player.ico"></Image>
            <Image x:Key="pc" Source="Resource/Icons/LeftPanel/pc.ico"></Image>
            <Image x:Key="file-manager" Source="Resource/Icons/file-manager.ico"></Image>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Primary/MaterialDesignColor.DeepPurple.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignColors;component/Themes/Recommended/Accent/MaterialDesignColor.Lime.xaml" />
            </ResourceDictionary.MergedDictionaries>

          

        </ResourceDictionary>
    </Application.Resources>
</Application>
